<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All Users</title>
    <style>
      table,
      td,
      th {
        border: 2px solid black;
      }
    </style>
  </head>
  <body>
    <form method="get" action="/user/add"><button>add new</button></form>
    <table>
      <tr>
        <th>id</th>
        <th>email</th>
        <th>username</th>
      </tr>
      <%for(user of users){%>
      <tr>
        <td><%=user.id%></td>
        <td><%=user.email%></td>
        <td><%=user.username%></td>
        <td>
          <form method="get" action="/user/<%=user.id%>/edit">
            <button>Edit</button>
          </form>
        </td>
        <td>
          <form method="get" action="/user/<%=user.id%>/deletepage">
            <button>Delete</button>
          </form>
        </td>
      </tr>

      <%}%>
    </table>
  </body>
</html>
